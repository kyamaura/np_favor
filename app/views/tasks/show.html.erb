<div class="main tasks-show">
  <div class="container">
    <div class="tasks-show-item">

      <div class="post-user-name">
        <!-- ユーザーの画像が表示されるように、以下のsrcの中を埋めてください -->
        <img src="<%= "/user_images/#{@user.image_name}" %>">

        <!-- link_toメソッドを用いて、ユーザー詳細ページへのリンクを作成してください -->
        <%= link_to(@user.email, "/users/#{@user.id}") %>
      </div>

      <p>【依頼内容】</p>
      <p>  <%= @task.title %>  </p>
      <p>【報酬】</p>
      <p><%= @task.compensation %></p>
      <p>【受託受付終了日】</p>
      <p><%= @task.reception_deadline %></p>
      <p>【頼みごとの詳細】</p>
      <p><%= @task.content %></p>

      <div class="task-menus">
      <% if @assistant && @task.user_id != @current_user.id %>
      <p>【オファー済】</p>
      <% elsif  @task.user_id != @current_user.id %>
        <%= link_to("/assistants/#{@task.id}/create", {method: "post"}) do %>
          <input type="submit" value="オファーする">
        <% end %>
      <% else %>
        <p></p>
      <% end %>
      </div>

      <div class="task-menus">
        <% if @task.user_id == @current_user.id  %>
        <%= link_to("編集", "/tasks/#{@task.id}/edit") %>
        <%= link_to("削除", "/tasks/#{@task.id}/destroy", {method: "post"}) %>
        <% end %>
      </div>

    </div>
  </div>
</div>
